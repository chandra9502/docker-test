                git 'https://github.com/chandra9502/docker-test.git'
            }
        }
        
        stage('Build') {
            steps {
                // Perform build steps here
                // For example, if it's a Docker project:
                // sh 'docker build -t myimage .'
            }
        }
        
        stage('Deploy') {
            steps {
                // Perform deployment steps here
                // For example, deploying to Docker:
                // sh 'docker run -d -p 8080:80 myimage'
            }
        }
    }
    
    post {
        success {
            // Send a success email notification
            emailext (
                to: 'vishakula950@gmail.com',
                subject: 'Pipeline Successful',
                body: 'The pipeline has completed successfully.'
            )
        }
        failure {
            // Send a failure email notification
            emailext (
                to: 'vishakula950@gmail.com',
                subject: 'Pipeline Failed',
                body: 'The pipeline has failed.'
            )
        }
    }
